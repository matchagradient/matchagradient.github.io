{
    "tabWidth": 4,
    "useTabs": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "semi": true,
    "printWidth": 100,
    "overrides": [
        {
            "files": [
                "*.html"
            ],
            "options": {
                "tabWidth": 4
            }
        },
        {
            "files": [
                "*.css",
                "*.scss"
            ],
            "options": {
                "tabWidth": 4
            }
        },
        {
            "files": [
                "*.js",
                "*.ts"
            ],
            "options": {
                "tabWidth": 4
            }
        }
    ]
}